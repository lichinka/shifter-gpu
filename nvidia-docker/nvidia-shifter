#!/bin/sh

srun shifter \
    --device=/dev/nvidiactl  \
    --device=/dev/nvidia-uvm \
    --device=/dev/nvidia0    \
    -V /usr/lib/libcuda.so.1:/usr/lib/libcuda.so.1                \
    -V /usr/lib/libcuda.so.1:/usr/local/nvidia/lib64/libcuda.so.1 \
    -V /usr/lib32/libcuda.so.1:/usr/lib32/libcuda.so.1            \
    -V /usr/lib32/libcuda.so.1:/usr/local/nvidia/lib/libcuda.so.1 \
    -V /usr/lib/libcuda.so:/usr/lib/libcuda.so                    \
    -V /usr/lib/libcuda.so:/usr/local/nvidia/lib64/libcuda.so     \
    -V /usr/lib32/libcuda.so:/usr/lib32/libcuda.so                \
    -V /usr/lib32/libcuda.so:/usr/local/nvidia/lib/libcuda.so     \
    -V /usr/lib/libnvcuvid.so.1:/usr/lib/libnvcuvid.so.1          \
    -V /usr/lib/libnvcuvid.so.1:/usr/local/nvidia/lib64/libnvcuvid.so.1 \
    -V /usr/lib32/libnvcuvid.so.1:/usr/lib32/libnvcuvid.so.1            \
    -V /usr/lib32/libnvcuvid.so.1:/usr/local/nvidia/lib/libnvcuvid.so.1 \
    -V /usr/lib/libnvcuvid.so:/usr/lib/libnvcuvid.so                    \
    -V /usr/lib/libnvcuvid.so:/usr/local/nvidia/lib64/libnvcuvid.so     \
    -V /usr/lib32/libnvcuvid.so:/usr/lib32/libnvcuvid.so                \
    -V /usr/lib32/libnvcuvid.so:/usr/local/nvidia/lib/libnvcuvid.so     \
    -V /usr/lib/libnvidia-compiler.so.355.11:/usr/lib/libnvidia-compiler.so.355.11 \
    -V /usr/lib/libnvidia-compiler.so.355.11:/usr/local/nvidia/lib64/libnvidia-compiler.so.355.11 \
    -V /usr/lib/libnvidia-compiler.so:/usr/lib/libnvidia-compiler.so    \
    -V /usr/lib/libnvidia-compiler.so:/usr/local/nvidia/lib64/libnvidia-compiler.so \
    -V /usr/lib/libnvidia-encode.so.1:/usr/lib/libnvidia-encode.so.1     \
    -V /usr/lib/libnvidia-encode.so.1:/usr/local/nvidia/lib64/libnvidia-encode.so.1 \
    -V /usr/lib32/libnvidia-encode.so.1:/usr/lib32/libnvidia-encode.so.1 \
    -V /usr/lib32/libnvidia-encode.so.1:/usr/local/nvidia/lib/libnvidia-encode.so.1 \
    -V /usr/lib/libnvidia-encode.so:/usr/lib/libnvidia-encode.so         \
    -V /usr/lib/libnvidia-encode.so:/usr/local/nvidia/lib64/libnvidia-encode.so \
    -V /usr/lib32/libnvidia-encode.so:/usr/lib32/libnvidia-encode.so            \
    -V /usr/lib32/libnvidia-encode.so:/usr/local/nvidia/lib/libnvidia-encode.so \
    -V /usr/lib/libnvidia-ml.so.1:/usr/lib/libnvidia-ml.so.1                    \
    -V /usr/lib/libnvidia-ml.so.1:/usr/local/nvidia/lib64/libnvidia-ml.so.1     \
    -V /usr/lib32/libnvidia-ml.so.1:/usr/lib32/libnvidia-ml.so.1                \
    -V /usr/lib32/libnvidia-ml.so.1:/usr/local/nvidia/lib/libnvidia-ml.so.1     \
    -V /usr/lib/libnvidia-ml.so:/usr/lib/libnvidia-ml.so                        \
    -V /usr/lib/libnvidia-ml.so:/usr/local/nvidia/lib64/libnvidia-ml.so         \
    -V /usr/lib32/libnvidia-ml.so:/usr/lib32/libnvidia-ml.so                    \
    -V /usr/lib32/libnvidia-ml.so:/usr/local/nvidia/lib/libnvidia-ml.so         \
    -V /usr/bin/nvidia-cuda-mps-control:/usr/local/bin/nvidia-cuda-mps-control  \
    -V /usr/bin/nvidia-cuda-mps-server:/usr/local/bin/nvidia-cuda-mps-server    \
    -V /usr/bin/nvidia-debugdump:/usr/local/bin/nvidia-debugdump                \
    -V /usr/bin/nvidia-persistenced:/usr/local/bin/nvidia-persistenced          \
    -V /usr/bin/nvidia-smi:/usr/local/bin/nvidia-smi 
    -it cuda:7.0
